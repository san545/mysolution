@page "/customers"
@using CustomerWEBAPI.BlazorUI.Models
@using CustomerWEBAPI.BlazorUI.Services
@inject CustomerService customerService
@inject NavigationManager Navigation

<h3>Customers</h3>

<button class="btn btn-primary" @onclick="CreateCustomer">Add Customer</button>

@if (customers == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Mobile No.</th>
                <th>Address</th>
                <th>City</th>
                <th>Country</th>
                <th>GST No.</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in customers)
            {
                <tr>
                    <td>@p.cust_id</td>
                    <td>@p.cust_name</td>
                    <td>@p.mob_no</td>
                    <td>@p.address</td>
                    <td>@p.city</td>
                    <td>@p.country</td>
                    <td>@p.gst_no</td>
                    <td>
                        <button class="btn btn-sm btn-warning" @onclick="() => EditCustomer(p)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteCustomer(p.cust_id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<Customer>? customers;

    protected override async Task OnInitializedAsync()
    {
        customers = await customerService.GetAllAsync();
    }

    async Task DeleteCustomer(int id)
    {
        await customerService.DeleteAsync(id);
        customers = await customerService.GetAllAsync();
    }

    void CreateCustomer() => Navigation.NavigateTo("/customerform");

    void EditCustomer(Customer p) =>
        Navigation.NavigateTo($"/customerform/{p.cust_id}");
}
